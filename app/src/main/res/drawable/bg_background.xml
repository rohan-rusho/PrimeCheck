<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base: dark gray to near-black -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#003368"
                android:endColor="#1E1E1E" />
        </shape>
    </item>

    <!-- Soft top glow with deep gray -->
    <item android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="900dp"
                android:centerX="50%"
                android:centerY="0%"
                android:startColor="#505050"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Vignette around edges for depth, black -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="1200dp"
                android:centerX="50%"
                android:centerY="60%"
                android:startColor="#00000000"
                android:endColor="#1B1B1B" />
        </shape>
    </item>

    <!-- Bottom shadow band: darker gray -->
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#181717"
                android:endColor="#00000000" />
        </shape>
    </item>

</layer-list>
